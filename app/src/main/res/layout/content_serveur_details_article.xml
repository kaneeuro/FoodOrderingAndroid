<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sadicomputing.foodordering.activity.serveur.ServeurDetailsArticleActivity"
    tools:showIn="@layout/activity_serveur_details_article">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imagedetailsarticle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/icons8_paella"
            android:contentDescription="@string/action_more"
            />
        <TextView
            android:id="@+id/categoriedetailsarticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/designationdetailsarticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/articlecommande"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/prixdetailsarticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:text=""
            android:layout_margin="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:textAllCaps="false"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
