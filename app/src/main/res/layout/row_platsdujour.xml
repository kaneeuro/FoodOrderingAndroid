<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/platsdujour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageplatsdujour"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icons8_paella"
                    android:contentDescription="@string/action_more"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="start|center">
                    <TextView
                        android:id="@+id/designationplatsdujour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:text="@string/platsdujour"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="false"/>
                    <TextView
                        android:id="@+id/prixplatsdujour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/platsdujour"
                        android:textColor="@android:color/darker_gray"
                        android:textAllCaps="false"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/addplatsdujour"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_action_add"
                    android:layout_gravity="end|center"
                    android:clickable="true"
                    android:contentDescription="@string/action_more"/>
                <ImageView
                    android:id="@+id/detailsplatsdujour"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_action_details"
                    android:layout_gravity="end|center"
                    android:clickable="true"
                    android:contentDescription="@string/action_more"
                    android:visibility="gone"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>